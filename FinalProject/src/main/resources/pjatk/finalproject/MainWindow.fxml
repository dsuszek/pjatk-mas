<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pjatk.finalproject.controller.MainWindowController"
      alignment="CENTER"
      spacing="10">
    <children>
        <ImageView fx:id="logoImageView"/>
        <Label text="Select Region:"/>
        <ComboBox fx:id="regionComboBox"/>
        <Label text="Select Company Branch:"/>
        <ComboBox fx:id="companyBranchComboBox"/>
        <Button text="Continue" onAction="#handleContinue"/>
    </children>
</VBox>