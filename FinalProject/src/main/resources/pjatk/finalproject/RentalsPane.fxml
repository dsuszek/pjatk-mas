<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="pjatk.finalproject.controller.Mobile4UController">
    <Label text="Numer ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="rentalId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Data rozpoczęcia:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="rentalStartDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Data zakończenia:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <DatePicker fx:id="rentalEndDate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Przejechany dystans:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="rentalDistance" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button text="Dodaj wynajem" onAction="#handleAddRental" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
