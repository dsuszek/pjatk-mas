<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.CheckBox?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pjatk.finalproject.controller.VehicleParametersWindowController"
      alignment="CENTER"
      spacing="10"
      style="-fx-padding: 20;">
    <children>
        <HBox spacing="10" alignment="CENTER">
            <VBox alignment="CENTER" spacing="5">
                <Label text="Select brand:"/>
                <ComboBox fx:id="brandComboBox"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <Label text="Select model:"/>
                <HBox spacing="5">
                    <ComboBox fx:id="modelComboBox"/>
                    <Button text="Search" onAction="#handleSearch" style="-fx-background-color: green; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </HBox>
        <Label text="All available vehicles:"/>
        <ListView fx:id="vehicleListView" prefHeight="200"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Display vehicle details" onAction="#handleDisplayVehicleDetails"/>
            <Button text="Add filters"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <VBox alignment="CENTER" spacing="5">
                <Label text="Select end date:"/>
                <DatePicker fx:id="endDatePicker"/>
            </VBox>
            <CheckBox text="Rental door to door" fx:id="rentalDoorToDoorCheckBox"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Back to Main Menu" onAction="#handleBackToMainMenu"/>
            <Button text="Continue" onAction="#handleContinue" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
    </children>
</VBox>
